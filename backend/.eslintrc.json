{
    "root": true,
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "no-restricted-syntax": "off",
        "no-plusplus": "off",
        "no-await-in-loop": "off",
        "no-continue": "off",
        "no-console": "off",
        "no-return-await": "off",
        "no-underscore-dangle": [
            "error",
            {
                "allow": ["_source"]
            }
        ],
        "camelcase": "off"
    }
}
